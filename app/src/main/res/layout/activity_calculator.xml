<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000">

    <RelativeLayout
        android:layout_width="394dp"
        android:layout_height="175dp"
        android:background="#000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtValueDua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="13dp"
          android:layout_marginEnd="22dp"
            android:textColor="#fff"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/txtOperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtValueDua"
            android:layout_toStartOf="@+id/txtValueDua"
            android:textColor="#fff"
            android:textSize="30dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/txtValueSatu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtValueDua"
            android:layout_toStartOf="@+id/txtOperator"
            android:textColor="#fff"
            android:textSize="30dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/txtHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtValueDua"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="22dp"/>

        <TextView
            android:id="@+id/txtHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtValueDua"
            android:layout_toStartOf="@+id/txtValueSatu"
            android:layout_marginRight="5dp"
            android:textColor="#fff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="385dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#000"
        android:layout_marginTop="175dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnSatu"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="#2f3030"
            android:text="1"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnDua"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginLeft="1dp"
            android:layout_toEndOf="@+id/btnSatu"
            android:background="#2f3030"
            android:text="2"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnTiga"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/btnSatu"
            android:layout_marginLeft="1dp"
            android:layout_toEndOf="@+id/btnDua"
            android:background="#2f3030"
            android:text="3"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnPembagi"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="1dp"
            android:layout_toEndOf="@+id/btnTiga"
            android:background="#d13232"
            android:text="/"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnEmpat"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_below="@+id/btnSatu"
            android:layout_marginTop="2dp"
            android:background="#2f3030"
            android:text="4"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnLima"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_below="@+id/btnSatu"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/btnSatu"
            android:background="#2f3030"
            android:text="5"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnEnam"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_below="@+id/btnSatu"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/btnDua"
            android:background="#2f3030"
            android:text="6"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnPerkali"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/btnSatu"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/btnTiga"
            android:background="#d13232"
            android:text="X"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnTujuh"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_below="@+id/btnEmpat"
            android:layout_marginTop="2dp"
            android:background="#2f3030"
            android:text="7"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnDelapan"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_below="@+id/btnEmpat"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/btnSatu"
            android:background="#2f3030"
            android:text="8"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnSembilan"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/btnTujuh"
            android:layout_marginLeft="1dp"
            android:layout_toEndOf="@+id/btnDua"
            android:background="#2f3030"
            android:text="9"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnPenambah"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/btnEmpat"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/btnTiga"
            android:background="#d13232"
            android:text="+"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnNol"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_below="@+id/btnTujuh"
            android:layout_marginTop="2dp"
            android:background="#2f3030"
            android:text="0"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnKoma"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_below="@+id/btnTujuh"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/btnSatu"
            android:background="#2f3030"
            android:text="."
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnPengurang"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/btnTujuh"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/btnTiga"
            android:background="#d13232"
            android:text="-"
            android:textColor="#fff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnNol"
            android:background="#2f3030"
            android:text="C"
            android:textColor="#fff"
            android:textSize="25dp"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btnPlusMinus"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/btnNol"
            android:layout_toEndOf="@+id/btnSatu"
            android:background="#2f3030"
            android:text="+/-"
            android:textColor="#fff"
            android:textSize="25dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="1dp"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/btnTujuh"
            android:layout_toEndOf="@+id/btnDua"
            android:text="Del"
            android:background="#2f3030"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="1dp" />

        <Button
            android:id="@+id/btnHasil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btnNol"
            android:layout_toEndOf="@+id/btnTiga"
            android:background="#d13232"
            android:text="="
            android:textColor="#fff"
            android:textSize="25dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"/>
    </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>